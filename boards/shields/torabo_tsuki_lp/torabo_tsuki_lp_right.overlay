#include "torabo_tsuki_lp.dtsi"
#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>

/* 右手トラックボール設定
 * - 通常（カーソル）: XY反転 + 0.6倍（3/5）
 * - layer 5（スクロール）:
 *     横 0.5倍（1/2）
 *     縦 1.0倍（変更なし）
 *     横方向だけ反転（感覚に合わせる）
 */
&trackball_listener {
    /* 通常時（カーソル用）：XY反転 + 0.6倍 */
    input-processors = <
        &zip_xy_transform (INPUT_TRANSFORM_X_INVERT | INPUT_TRANSFORM_Y_INVERT)
        &zip_x_scaler 3 5
        &zip_y_scaler 3 5
    >;

    /* layer 5 のときだけスクロールに変換（カーソル側の0.6倍とは独立） */
    scroll_layer {
        layers = <5>;

        input-processors = <
            &zip_x_scaler 1 2
            &zip_scroll_scaler 2 10
            &zip_xy_to_scroll_mapper
            &zip_scroll_transform (INPUT_TRANSFORM_X_INVERT)
        >;
    };
};

/* キーレイアウト用の transform は元のまま */
&size_s_transform {
    col-offset = <7>;
};

&size_m_transform {
    col-offset = <7>;
};

&size_l_transform {
    col-offset = <7>;
};
